@article{DellAmico2019,
author={Dell'Amico, Mauro and Montemanni, Roberto and Novellani, Stefano},
title={Drone-assisted deliveries: new formulations for the flying sidekick traveling salesman problem},
journal={Optimization Letters},
year={2021},
